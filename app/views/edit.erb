

<form method="POST" action="/recipes/<%=@recipe.id%>">
  <input type="hidden" name="_method" value="PATCH">
  <label for='name'>Name:</label><br>
  <input name='name' type='text' value='<%= @recipe.name %>'><br>

  <label for='ingredients'>Ingredients:</label><br>
  <input name='ingredients' type='text' value='<%= @recipe.ingredients %>'><br>

  <label for='cook_time'>Cook Time:</label><br>
  <input name='cook_time' type='text' value='<%= @recipe.cook_time %>'><br>

  <input type="submit" value="submit"><br>
</form>

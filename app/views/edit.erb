<h1><%= @recipe.name %></h1>
<h2>Cook time: <%= @recipe.cook_time %> minutes</h2>
<p><%= @recipe.ingredients %></p>

<form method="post" action="/recipes/<%= @recipe.id %>">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <label for="name">New recipe name:</label>
  <input type="text" name="name">
  <label for="ingredients">New recipe ingredients:</label>
  <input type="text" name="ingredients">
  <label for="cook_time">New recipe cook time:</label>
  <input type="text" name="cook_time">
  <input type="submit" value="submit">
</form>